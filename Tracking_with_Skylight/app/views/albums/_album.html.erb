<li>
  <%= link_to album.title, album_path(album) %> by <%= album.musician %>
  <% unless album.published? %>
    <small>(not yet published)</small>
  <% end %>
  <ul>
    <% album.songs.each do |song| %>
      <% cache song do %>
        <li><%= song.title %> (<%= song.duration %>s)</li>
      <% end %>
    <% end %>
  </ul>
</li>